{
    "name": "Nango",
    "description": "Get OAuth tokens for APIs - fast & secure",
    "website": "https://www.namgo.dev",
    "repository": "https://github.com/NangoHQ/nango",
    "logo": "https://raw.githubusercontent.com/NangoHQ/nango-heroku/main/logo.svg",
    "stack": "container",
    "env": {
        "NANGO_INSTALL_ID": {
            "generator": "secret",
            "description": "Unique install ID"
        },
        "SERVER_PORT": {
            "description": "Port to listen to https requests on",
            "value": "443"
        },
        "NANGO_SERVER_URL": {
            "description": "Environment variable for the URL where the nango server is deployed on"
        }
    },
    "addons": [
        {
            "plan": "heroku-postgresql",
            "options": {
                "version": "13"
            }
        }
    ]
}